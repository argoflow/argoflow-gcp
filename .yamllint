extends: default
rules:
  line-length:
    max: 160
    level: warning
    ignore: |
      /distribution/oidc-auth/dex-config-secret.yaml
      /distribution/oidc-auth/oauth2-proxy-secret.yaml
  indentation:
    spaces: 2
    indent-sequences: false
  quoted-strings:
    required: false
    quote-type: double
  document-start: disable
  comments:
    min-spaces-from-content: 0
