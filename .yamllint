extends: default
rules:
  line-length:
    max: 160
    level: warning
    ignore: |
      /distribution/oidc-auth/overlays/dex/dex-config-secret.yaml
      /distribution/oidc-auth/overlays/dex/oauth2-proxy-secret.yaml
  indentation:
    spaces: 2
    indent-sequences: false
  quoted-strings:
    required: false
    quote-type: double
  document-start: disable
  comments:
    min-spaces-from-content: 0
ignore: |
  /distribution/knative/net-istio-v0_24_0.yaml
  /distribution/knative/serving-core-v0_24_0.yaml
